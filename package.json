{
  "name": "echomirror",
  "version": "1.0.0",
  "description": "リアルタイムカメラ映像共有アプリ",
  "main": "main.js",
  "scripts": {
    "start": "node server/index.js",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "server": "node server/index.js",
    "client": "electron .",
    "dev-server": "nodemon server/index.js",
    "dev-client": "electron .",
    "web": "node server/index.js",
    "web-dev": "nodemon server/index.js",
    "web-https": "HTTPS=true node server/index.js",
    "web-https-dev": "HTTPS=true nodemon server/index.js"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "keywords": [
    "electron",
    "webrtc",
    "socket.io",
    "camera",
    "face-detection"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^4.18.2",
    "nodemon": "^3.0.2",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.echomirror.app",
    "productName": "EchoMirror",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!*.md"
    ],
    "mac": {
      "category": "public.app-category.video"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
